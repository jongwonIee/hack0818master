<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_for @post do |f| %>
    <%= f.text_field :title, placeholder: '제목을 입력해주세요' %><br>
    <%= f.text_area :content, placeholder: '기관 이름을 입력해주세요', rows: '3' %><br>
    <%= f.text_area :content, placeholder: '기관 위치를 입력해주세요', rows: '5' %><br>
    <%= f.text_area :content, placeholder: '시설 설명를 입력해주세요', rows: '7' %><br>
    <%= f.text_area :content, placeholder: '회원권 남은 기간을 입력해주세요', rows: '1' %><br>
    <%= f.text_area :content, placeholder: '가격을 입력해주세요', rows: '1' %><br>
    <%= f.submit %>
<% end %>